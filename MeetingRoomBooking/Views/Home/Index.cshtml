@using MeetingRoomBooking.Models
@{
    ViewData["Title"] = "Home";
    var stats = ViewData["Stats"] as dynamic;
    var todayBookings = ViewData["TodayBookings"] as List<Booking>;
}

<div class="text-center mt-5 mb-4">
    <h1 class="fw-bold display-5">📅 Meeting Room Booking System</h1>
    <p class="lead text-muted">Plan smarter. Meet better. Book instantly.</p>
    <a asp-controller="Bookings" asp-action="Create" class="btn btn-lg btn-primary mt-3">
        <i class="bi bi-calendar-plus"></i> Book a Room
    </a>
</div>
<!-- Dashboard Statistics -->
<div class="dashboard-section">
    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-primary bg-opacity-10 text-primary">
                <center><i class="bi bi-building fs-1"></i></center>
                <center><span class="number">@stats.TotalRooms</span></center>
                <center><span class="label">Available Rooms</span></center>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-success bg-opacity-10 text-success">
                <center><i class="bi bi-calendar-check fs-1"></i></center>
                <center><span class="number">@stats.TotalBookings</span></center>
                <center><span class="label">Total Bookings</span></center>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-info bg-opacity-10 text-info">
                <center><i class="bi bi-calendar-date fs-1"></i></center>
                <center><span class="number">@stats.TodayBookings</span></center>
                <center><span class="label">Today's Bookings</span></center>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-warning bg-opacity-10 text-warning">
                <center><i class="bi bi-calendar-plus fs-1"></i></center>
                <center><span class="number">@stats.UpcomingBookings</span></center>
                <center><span class="label">Upcoming Bookings</span></center>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="dashboard-section">
    <div class="col-12 mb-4">
        <h4><i class="bi bi-lightning-charge"></i> Quick Actions</h4>
    </div>

    <div class="d-flex justify-content-between flex-nowrap gap-3">
        <div class="card feature-card text-center p-4" style="width: 100%; max-width: 23%;">
            <div class="feature-icon mb-2"><i class="bi bi-calendar-plus fs-2"></i></div>
            <h5 class="card-title">Book a Room</h5>
            <p class="card-text">Schedule a new meeting in any available room</p>
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-soft-teal">Book Now</a>
        </div>

        <div class="card feature-card text-center p-4" style="width: 100%; max-width: 23%;">
            <div class="feature-icon mb-2"><i class="bi bi-calendar3 fs-2"></i></div>
            <h5 class="card-title">View Calendar</h5>
            <p class="card-text">See all bookings in a convenient calendar view</p>
            <a asp-controller="Bookings" asp-action="Calendar" class="btn btn-soft-teal">Calendar</a>
        </div>

        <div class="card feature-card text-center p-4" style="width: 100%; max-width: 23%;">
            <div class="feature-icon mb-2"><i class="bi bi-building fs-2"></i></div>
            <h5 class="card-title">View Rooms</h5>
            <p class="card-text">Browse all available meeting rooms and their details</p>
            <a asp-controller="Room" asp-action="Index" class="btn btn-soft-teal">View Rooms</a>
        </div>

        <div class="card feature-card text-center p-4" style="width: 100%; max-width: 23%;">
            <div class="feature-icon mb-2"><i class="bi bi-people fs-2"></i></div>
            <h5 class="card-title">View Employees</h5>
            <p class="card-text">View all employees and their details</p>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-soft-teal">View Employee</a>
        </div>
    </div>
</div>

@if (todayBookings != null && todayBookings.Any())
{
    <div class="dashboard-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4><i class="bi bi-calendar-day"></i> Today's Bookings (@DateTime.Today.ToString("dddd, MMMM d, yyyy"))</h4>
            <a asp-controller="Bookings" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Time</th>
                        <th>Room</th>
                        <th>Meeting</th>
                        <th>Booked By</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in todayBookings)
                    {
                        <tr>
                            <td>@booking.StartTime.ToString("HH:mm") - @booking.EndTime.ToString("HH:mm")</td>
                            <td>@booking.Room.RoomName</td>
                            <td>@booking.MeetingTitle</td>
                            <td>@booking.Employee.EmployeeName</td>
                            <td>
                                @switch (booking.Status)
                                {
                                    case BookingStatus.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case BookingStatus.Pending:
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        break;
                                    case BookingStatus.Rejected:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                    case BookingStatus.Cancelled:
                                        <span class="badge bg-secondary">Cancelled</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.BookingId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="dashboard-section text-center">
        <div class="p-4">
            <i class="bi bi-calendar-x" style="font-size: 3rem; color: #adb5bd;"></i>
            <h5 class="mt-3">No bookings scheduled for today 😴</h5>
            <p class="text-muted">Looks like a quiet day. Want to change that?</p>
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book a Room</a>
        </div>
    </div>

}