@using MeetingRoomBooking.Models
@model IEnumerable<MeetingRoomBooking.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">Your Bookings</h2>
        <div>
            <a asp-action="Create" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> New Booking
            </a>
            <a asp-action="Calendar" class="btn btn-outline-primary">
                <i class="bi bi-calendar-event"></i> Calendar View
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No bookings found. Ready to schedule your first meeting? 🎉
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>📌 Title</th>
                        <th>🏢 Room</th>
                        <th>👤 Booked By</th>
                        <th>🕒 Start</th>
                        <th>🕓 End</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.MeetingTitle</td>
                            <td>@booking.Room?.RoomName</td>
                            <td>@booking.Employee?.EmployeeName</td>
                            <td>@booking.StartTime.ToString("g")</td>
                            <td>@booking.EndTime.ToString("g")</td>
                            <td>
                                <span class="badge bg-@GetStatusClass(booking.Status)">
                                    @booking.Status
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-sm btn-outline-info me-1" title="View details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-sm btn-outline-warning me-1" title="Edit booking">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-sm btn-outline-danger" title="Delete booking">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
<div class="row mt-4">
    <div class="col">
        <a asp-controller="Home" a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>


@functions {
    string GetStatusClass(BookingStatus status)
    {
        return status switch
        {
            BookingStatus.Approved => "success",
            BookingStatus.Pending => "warning",
            BookingStatus.Rejected => "danger",
            BookingStatus.Cancelled => "secondary",
            _ => "dark"
        };
    }
}
