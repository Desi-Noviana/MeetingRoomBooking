@model MeetingRoomBooking.Models.Booking
@using MeetingRoomBooking.Models

@{
    ViewData["Title"] = "Edit Booking";

    var statusColor = Model.Status switch
    {
        BookingStatus.Pending => "badge bg-warning text-dark",
        BookingStatus.Approved => "badge bg-success",
        BookingStatus.Rejected => "badge bg-dark text-light",
        BookingStatus.Cancelled => "badge bg-danger",
        _ => "badge bg-secondary"
    };
}

<div class="container py-4">
    <h2 class="mb-3 text-primary fw-bold">Edit Your Booking</h2>

    @if (Model.EndTime < DateTime.Now)
    {
        <div class="alert alert-warning">
            <strong>Heads up:</strong> This booking has already ended.
        </div>
    }
    @if (Model.IsCancelled)
    {
        <div class="alert alert-danger">
            <strong>Notice:</strong> This booking has been cancelled.
        </div>
    }

    <div class="mb-4">
        <span class="@statusColor px-3 py-2">Status: @Model.Status</span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="BookingId" />

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label">Booked By</label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                        <option value="">-- Select employee --</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="you@company.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoomId" class="form-label">Room</label>
                    <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId">
                        <option value="">-- Select room --</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MeetingTitle" class="form-label">Meeting Title</label>
                    <input asp-for="MeetingTitle" class="form-control" placeholder="e.g. Weekly Sync" />
                    <span asp-validation-for="MeetingTitle" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional notes or agenda..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Attendees" class="form-label">Number of Attendees</label>
                    <input asp-for="Attendees" class="form-control" id="NumberOfAttendees" />
                    <span asp-validation-for="Attendees" class="text-danger small"></span>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="StartTime" class="form-label">Start Time</label>
                        <input asp-for="StartTime" class="form-control" type="datetime-local" value="@Model.StartTime.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndTime" class="form-label">End Time</label>
                        <input asp-for="EndTime" class="form-control" type="datetime-local" value="@Model.EndTime.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="EndTime" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CancellationCode" class="form-label">Cancellation Code</label>
                    <input asp-for="CancellationCode" class="form-control" readonly />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-1"></i> Update Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#RoomId").change(function () {
                var selectedRoomId = $(this).val();
                if (selectedRoomId) {
                    $.ajax({
                        url: '@Url.Action("GetRoomCapacity", "Bookings")',
                        type: 'GET',
                        data: { roomId: selectedRoomId },
                        success: function (capacity) {
                            if (capacity > 0) {
                                $("#NumberOfAttendees").attr("max", capacity);
                                $("#NumberOfAttendees").attr("placeholder", "Max: " + capacity + " attendees");
                            }
                        }
                    });
                }
            });
        });
    </script>
}
