@model MeetingRoomBooking.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<div class="container">
    <h1>Delete Room</h1>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this room?</h4>
        <p>Deleting this room will remove all its bookings from the system.</p>
    </div>
    
    <div class="card">
        <div class="card-header bg-light">
            <h5>@Model.RoomName</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity</dd>
                
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                
                <dt class="col-sm-3">Amenities</dt>
                <dd class="col-sm-9">@(Model.Amenities )</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="RoomId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>