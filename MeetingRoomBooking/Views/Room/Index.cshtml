@model IEnumerable<MeetingRoomBooking.Models.Room>

<h2 class="mb-4">📋 Room List</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Room
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@item.RoomName</h5>
                    <p class="card-text text-muted">@item.Description</p>

                    <p><strong>Capacity:</strong> @item.Capacity people</p>

                    <p><strong>Amenities:</strong></p>
                    <ul class="list-inline">
                        @foreach (var amenity in item.Amenities?.Split(',') ?? new string[0])
                        {
                            <li class="list-inline-item">
                                <span class="badge bg-secondary">@amenity.Trim()</span>
                            </li>
                        }
                    </ul>

                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-info me-1">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-4">
    <div class="col">
        <a asp-controller="Home" a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>
