@model IEnumerable<MeetingRoomBooking.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-people-fill text-primary"></i> Employee List
    </h2>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-person-fill"></i> Name</th>
                    <th><i class="bi bi-envelope-fill"></i> Email</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmployeeName</td>
                        <td>@employee.Email</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Create New
        </a>
    </div>
</div>
<div class="row mt-4">
    <div class="col">
        <a asp-controller="Home" a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>
