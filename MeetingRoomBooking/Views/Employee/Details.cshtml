@model MeetingRoomBooking.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-person-badge-fill text-info"></i> Employee Details
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="bi bi-person-circle"></i> @Model.EmployeeName
            </h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong><i class="bi bi-envelope-fill me-2"></i>Email:</strong> @Model.Email
                </li>
            </ul>
        </div>
    </div>

    <div class="mt-4 d-flex">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
