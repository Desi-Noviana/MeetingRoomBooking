@model MeetingRoomBooking.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}
<div class="container">
    <h1>Delete Employee</h1>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this employee?</h4>
        <p>Deleting this room will remove all its bookings from the system.</p>
    </div>
    
    <div class="card">
        <div class="card-header bg-light">
            <h5>@Model.EmployeeName</h5>
        </div>
        <div class="card-body">
            <dl class="row">

                <dt class="col-sm-3">EmployeeName</dt>
                <dd class="col-sm-9">@Model.EmployeeName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="EmployeeId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>